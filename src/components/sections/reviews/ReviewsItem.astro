---
import Icon from '../../ui/icons/Icon.astro';
import FullStar from '../../ui/stars/FullStar.astro';

const { content, author } = Astro.props;

const letter = author.charAt(0).toUpperCase();
---

<blockquote class='relative space-y-6'>
    <Icon name='quotation' />

    <div class='relative z-10'>
        <p class='text-lg font-semibold italic text-neutral-300'>
            {content}
        </p>
    </div>

    <div class="flex flex-row space-x-1">
        {Array.from({ length: 5 }).map(() => (
            <FullStar />
    ))}
    </div>

    <div class='mt-6'>
        <div class='flex items-center'>
            <div class='flex-shrink-0'>
                <div class='avatar placeholder'>
                    <div
                        class='w-10 rounded-full bg-neutral-700 text-neutral-200'
                    >
                        <span class='text-md uppercase'>{letter}</span>
                    </div>
                </div>
            </div>

            <div class='ms-4 grow'>
                <div class='font-bold text-neutral-200'>
                    {author}
                </div>
            </div>
        </div>
    </div>
</blockquote>
