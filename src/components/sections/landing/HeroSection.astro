---
// Import the necessary dependencies
import { Image } from 'astro:assets';
import PrimaryCTA from '@components/ui/buttons/PrimaryCTA.astro';
import gaf from 'src/images/GAF-certified-400-293x300-removebg-preview.png';

// Define props from Astro
const { title, primaryBtn } = Astro.props;

// Define TypeScript interface for props
interface Props {
    title: string;
    subTitle?: string;
    primaryBtn?: string;
    primaryBtnURL?: string;
    secondaryBtn?: string;
    secondaryBtnURL?: string;
    withReview?: boolean;
    avatars?: Array<string>;
    starCount?: number;
    rating?: string;
    reviews?: string;
    src?: any;
    alt?: string;
}
---

<!-- Defining a grid container that holds all the content -->
<section
    id='hero'
    class='hero relative mx-auto grid h-[700px] w-screen gap-4 overflow-hidden bg-cover bg-center py-16 sm:px-6 md:h-screen md:grid-cols-2 md:items-center md:gap-8 md:px-4 md:py-14 lg:px-8 2xl:max-w-full'
    style="background-image: url('/hero-image.jpeg');"
>
    <div class='absolute inset-0 h-screen w-screen bg-black bg-opacity-30'>
    </div>
    <div
        class='absolute bottom-[70px] right-[-50px] flex w-[300px] -rotate-[40deg] transform items-center justify-center bg-yellow-600 py-1 text-center font-semibold text-neutral-100 drop-shadow-md md:bottom-[80px] md:right-[-60px] md:h-[50px] md:w-[385px] md:text-lg'
    >
        <p class='uppercase'>We work with insurances</p>
    </div>

    <!-- Title and description -->
    <div
        class='relative flex h-screen w-screen grid-cols-2 justify-between gap-6 px-10 md:grid md:gap-10'
    >
        <!-- Each h1 and p tag renders a portion of the title and subTitle defined above -->
        <div class='col-span-1 space-y-24 pt-32 md:space-y-12'>
            <h1
                class='block text-balance text-4xl font-bold tracking-tight text-neutral-200 sm:text-4xl lg:text-6xl lg:leading-tight'
            >
                <!-- About Fragment: https://docs.astro.build/en/basics/astro-syntax/#fragments -->
                <Fragment set:html={title} />
            </h1>
            <!-- Action Button Section: This section includes two CTAs with their own styles and URL -->
            <div class='mt-7 w-full gap-3 sm:inline-flex'>
                {
                    primaryBtn && (
                        <PrimaryCTA
                            title={primaryBtn}
                            url={`#free-estimate`}
                        />
                    )
                }
            </div>
        </div>
        <a
            href='../src/images/GAF_Certificate.pdf'
            target='_blank'
            class='col-span-1 justify-self-end md:pr-20'
        >
            <Image
                alt='gaf certificate'
                src={gaf}
                class='absolute right-10 h-24 w-24 md:right-24 md:h-40 md:w-40'
            />
        </a>
    </div>
</section>
