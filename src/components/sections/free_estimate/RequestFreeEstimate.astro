---
import ContactIconBlock from '@components/ui/blocks/ContactIconBlock.astro';
import Form from '@components/sections/free_estimate/Form.html';

const title: string = 'Request Your Free Estimate';
const subTitle: string =
    'Fill out the form below to schedule your free estimate!';
---

<section
    class='mx-auto max-w-[85rem] bg-neutral-200 px-4 py-10 sm:px-6 lg:px-8 lg:py-14'
>
    <div class='mx-auto max-w-2xl lg:max-w-5xl'>
        <div class='text-center'>
            <h1 class='font-semibold text-neutral-700 md:text-5xl'>
                {title}
            </h1>
        </div>

        <div
            class='mt-12 grid items-center gap-6 md:grid-cols-2 lg:grid-cols-2 lg:gap-16'
        >
            <div class='col-span-1 flex flex-col rounded-xl p-4 sm:p-6 lg:p-8'>
                <h2 class='mb-8 text-xl font-semibold text-neutral-700'>
                    Fill the form to schedule your free estimate!
                </h2>
                <Form />
            </div>

            <div class='col-span-1 divide-y divide-neutral-300'>
                <ContactIconBlock
                    heading='Business Hours'
                    content='Monday - Friday: 8:00 AM - 5:00 PM \n Saturday: 9:00 AM - 12:30 PM \n Sunday: Closed'
                    isLinkVisible={false}
                    isArrowVisible={false}
                >
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        width='24'
                        height='24'
                        viewBox='0 0 24 24'
                    >
                        <g
                            fill='none'
                            stroke='#656565'
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                        >
                            <circle
                                cx='12'
                                cy='12'
                                r='9'
                            ></circle>
                            <path d='M11 8v5h5'></path>
                        </g>
                    </svg>
                </ContactIconBlock>

                <ContactIconBlock
                    heading='Visit our office'
                    content='AM Roofing'
                    isAddressVisible={true}
                    addressContent='1812 W College St, Springfield, MO 65806'
                >
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        width='24'
                        height='24'
                        viewBox='0 0 24 24'
                    >
                        <g
                            fill='none'
                            stroke='#656565'
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                        >
                            <path d='M9 11a3 3 0 1 0 6 0a3 3 0 0 0-6 0'></path>
                            <path
                                d='M17.657 16.657L13.414 20.9a2 2 0 0 1-2.827 0l-4.244-4.243a8 8 0 1 1 11.314 0'
                            ></path>
                        </g>
                    </svg>
                </ContactIconBlock>

                <ContactIconBlock
                    heading='Contact us by email'
                    content='Prefer the written word? Drop us an email at'
                    isLinkVisible={true}
                    linkTitle='amroofingpro@gmail.com'
                    linkURL='mailto:amroofingpro@gmail.com'
                >
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        width='24'
                        height='24'
                        viewBox='0 0 24 24'
                    >
                        <path
                            fill='#656565'
                            d='M21.03 6.29L12 .64L2.97 6.29C2.39 6.64 2 7.27 2 8v10c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V8c0-.73-.39-1.36-.97-1.71M20 18H4v-8l8 5l8-5zm-8-5L4 8l8-5l8 5z'
                        ></path>
                    </svg>
                </ContactIconBlock>

                <ContactIconBlock
                    heading='Contact us by phone'
                    content='Have a question? Call us at'
                    isLinkVisible={true}
                    linkTitle='417-316-0852'
                    linkURL='tel:+14173160852'
                >
                    <svg
                        xmlns='http://www.w3.org/2000/svg'
                        width='24'
                        height='24'
                        viewBox='0 0 24 24'
                    >
                        <path
                            fill='none'
                            stroke='#656565'
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                            d='M22 16.92v3a2 2 0 0 1-2.18 2a19.8 19.8 0 0 1-8.63-3.07a19.5 19.5 0 0 1-6-6a19.8 19.8 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72a12.8 12.8 0 0 0 .7 2.81a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45a12.8 12.8 0 0 0 2.81.7A2 2 0 0 1 22 16.92'
                        ></path>
                    </svg>
                </ContactIconBlock>
            </div>
        </div>
    </div>
</section>
